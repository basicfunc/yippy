#!/bin/env bash

export YIPPY_EXE=${YIPPY_DIR}/yippy

count_ok=0
count_fail=0

if_ok() {
	if [[ $1 -eq $2 ]]; then
		echo -e "Test:OK\n"
		let "count_ok++"
	else
		echo -e "Test:Fail\n"
		let "count_fail++"
	fi

}

export -f if_ok

echo "*************TEST****************"

for file in *.sh; do
	./${file}
done

echo "${count_ok} test Passed."
echo "${count_fail} test Failed."
